disk_analys()
{
	P="tee"
	if [ $1 ]; then P="head -n ${1}"; fi
	du -a -S --block-size m | sort -nr | $P | while read SIZE NAME; do echo $SIZE `ls -aFhd --color=always "${NAME}"`; done
}
